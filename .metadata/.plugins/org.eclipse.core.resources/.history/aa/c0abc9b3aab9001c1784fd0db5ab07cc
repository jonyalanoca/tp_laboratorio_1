#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include "otros.h"

int forzarCarga(int* kilometros, float* precioLatam, float* precioAeroL){
	int todoOk=0;
	if(kilometros!=NULL && precioLatam!=NULL && precioAeroL!=NULL){
		*kilometros=7090;
		*precioLatam=159339;
		*precioAeroL=162965;
		todoOk=1;
	}
	return todoOk;
}
int cerrar(char* salir){
	int todoOk=0;
	if(salir!=NULL){
		system("cls");
		printf("ATENCION.\nEsta por salir del programa.\nPara confirmar presione (s): ");
		fflush(stdin);
		scanf("%c", salir);
		*salir=tolower(*salir);
	}
	return todoOk;
}
