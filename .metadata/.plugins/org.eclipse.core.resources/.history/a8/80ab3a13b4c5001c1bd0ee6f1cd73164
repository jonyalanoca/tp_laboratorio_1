int informes(Passenger* list, int len){
	int todoOk=-1;
	int auxEntero;
	if(list!=NULL && len>0){
		switch(menuInformes()){
		case 1:
			printfPassengers(list, len);
			break;
		case 2:
			auxEntero=ascendenteDescendente();
			sortPassengers(list, len,auxEntero);
			break;
		case 3:
			auxEntero=ascendenteDescendente();
			break;
		case 4:

			break;
		}
		todoOk=0;
	}
	return todoOk;
}
int sortPassengers(Passenger* list, int len, int order){
	int todoOk=-1;
	Passenger aux;
	if(list!=NULL && len>0){
		for(int i=0; i<len-1;i++){
			for(int u=i+1; u<len; u++){
				if(strcmp(list[i].lastName,list[u].lastName)){
					aux=list[i];
					list[i]=list[u];
					list[u]=aux;
				}
			}
		}
		todoOk=0;
	}
	return todoOk;
}
