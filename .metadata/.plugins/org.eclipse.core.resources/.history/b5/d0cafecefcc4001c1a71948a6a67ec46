#include <stdio.h>
#include <stdlib.h>
#include "otros.h"
#include <ctype.h>

int cerrar(char* pSalir){
	int todoOk=0;
	if(pSalir!=NULL){
		system("cls");
		printf("ATENCION.\nEsta por salir del programa.\nPara confirmar presione (s): ");
		fflush(stdin);
		scanf("%c", pSalir);
		fflush(stdin);
		*pSalir=tolower(*pSalir);
		todoOk=1;
	}
	return todoOk;
}
