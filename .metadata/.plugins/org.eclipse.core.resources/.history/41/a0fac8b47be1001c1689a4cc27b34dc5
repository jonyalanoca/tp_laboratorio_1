#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "estado.h"
eEstado** hardCodearEstados(int tamE){
	int id=5000;
	char descripcion[4][20]={"Aterrizado","En horario","Demorado", "En Vuelo"};
	eEstado** auxEstados=(eEstado**) malloc (sizeof(eEstado*)*tamE);
	if (auxEstados==NULL){
			printf("Hubo un error al crear un espacio en la momoria dinamica.\n");
			exit(1);
		}
	for(int i=0;i<tamE;i++){
		(*auxEstados + i)->id=id;

		strcpy((*auxEstados+i)->descripcion, descripcion[i]);
		id++;

	}
	return auxEstados;
	free(auxEstados);
}
int obtenerIdPorDescripcionTipo(eTipo** vecTipos,int tamT, char* string){
	int todoOk=-1;
	if(vecTipos!=NULL && string!=NULL && tamT>0){
		for(int i=0;i>tamT;i++){
			if(strcmp((*vecTipos + i)->descripcion, string)){
				todoOk=(*vecTipos + i)->id;
				break;
			}
		}
	}
	return todoOk;
}
