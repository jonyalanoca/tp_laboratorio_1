#include <stdio.h>
#include <stdlib.h>
#include "menus.h"
#include "validaciones.h"

int main(void) {
	setbuf(stdout,NULL);

	int seguir=1;
	int kilometros=0;
	float precioAeroL=0;
	float precioLatam=0;

	do{

	switch(menu(kilometros, precioAeroL, precioLatam)){
	system("cls");
	case 1:
		if(!enteroPositivo("Ingrese los kilometros",&kilometros)){
			printf("Error para validar.\n");
		}
		else{
			printf("Se cargo los kilometros con exito.\n");
		}
		break;
	case 2:
		do{
			switch(menuIngresarPrecio()){
			case 1:
				decimalPositivo("Ingrese el precio de vuelo por AeroLineas", &precioAeroL);
				break;
			case 2:
				decimalPositivo("Ingrese el precio de vuelo por Latam", &precioLatam);
				break;
			case 3:
					break;
				break;
			}
		}while(!precioAeroL || !precioLatam);
		printf("Se cargaron los precios correctamente.\n");
		break;
	case 3:
		if(!precioAeroL || !precioLatam || !kilometros){
			printf("Porfavor primero complete las opciones 1 y/o 2 para continuar.\n");
		}else{

		}
		break;
	case 4:
		printf("opcion4\n");
		break;
	case 5:
		printf("opcion5\n");
		break;
	case 6:
		printf("opcion6\n");
		seguir=0;
		break;
	}
	system("pause");
	system("cls");
	}while(seguir);
	return EXIT_SUCCESS;
}

