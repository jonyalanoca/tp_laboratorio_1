#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "estado.h"

eEstado** hardCodearEstados(int tamE){
	int id=5000;
	char descripcion[4][20]={"Aterrizado","En horario","Demorado", "En Vuelo"};
	eEstado** auxEstados=(eEstado**) malloc (sizeof(eEstado*)*tamE);
	printf("121s\n");
	if (auxEstados==NULL){
			printf("Hubo un error al crear un espacio en la momoria dinamica.\n");
			exit(1);
		}
	printf("cahu\n");
	for(int i=0;i<tamE;i++){
		(*auxEstados + i)->id=id;

		strcpy((*auxEstados+i)->descripcion, descripcion[i]);
		id++;

	}
	return auxEstados;
	free(auxEstados);
}
int obtenerIdPorDescripcionEstado(eEstado** vecEstados,int tamE, char* string){
	int todoOk=-1;
	if(vecEstados!=NULL && string!=NULL && tamE>0){
		for(int i=0;i>tamE;i++){
			if(strcmp((*vecEstados + i)->descripcion, string)){
				todoOk=(*vecEstados + i)->id;
				break;
			}
		}
	}
	return todoOk;
}
