		if(pFile!=NULL){
			printf("hola");
			system("pause");
			//parser_PassengerFromText(pFile, pArrayListPassenger, tipos, tamT, estados, tamE);
			todoOk=0;
		}
		fclose(pFile);
		todoOk=0;
	}
	return todoOk;
}

