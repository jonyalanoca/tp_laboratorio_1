#include <stdio.h>
#include <stdlib.h>
#include "menus.h"
#include "validaciones.h"

int main(void) {
	setbuf(stdout,NULL);

	int seguir=1;
	int kilometros=0;
	int precioAeroL=0;
	int precioLatam=0;

	do{

	switch(menu(kilometros, precioAeroL, precioLatam)){
	system("cls");
	case 1:
		if(!enteroPositivo("Ingrese los kilometros",&kilometros)){
			printf("Error para validar.\n");
		}
		else{
			printf("Se cargo los kilometros con exito.\n");
		}
		break;
	case 2:
		printf("opcion2\n");
		break;
	case 3:
		printf("opcion3\n");
		break;
	case 4:
		printf("opcion4\n");
		break;
	case 5:
		printf("opcion5\n");
		break;
	case 6:
		printf("opcion6\n");
		seguir=0;
		break;
	}
	system("pause");
	system("cls");
	}while(seguir);
	return EXIT_SUCCESS;
}

