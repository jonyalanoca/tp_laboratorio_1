#include <stdio.h>
#include <stdlib.h>
#include "menus.h"
#include "validaciones.h"

int main(void) {
	setbuf(stdout,NULL);
	int opcionMenu;
	int seguir=1;
	int kilometros=-1;
	do{

	switch(menu()){
	case 1:
		enteroPositivo("Ingrese los kilometros",&kilometros);
		printf("ingreso %d.....", kilometros);
		break;
	case 2:
		printf("opcion2\n");
		break;
	case 3:
		printf("opcion3\n");
		break;
	case 4:
		printf("opcion4\n");
		break;
	case 5:
		printf("opcion5\n");
		break;
	case 6:
		printf("opcion6\n");
		seguir=0;
		break;
	}
	system("cls");
	}while(seguir);
	return EXIT_SUCCESS;
}

