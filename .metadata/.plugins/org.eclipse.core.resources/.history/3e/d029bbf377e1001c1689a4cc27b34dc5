#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "tipo.h"
eTipo** hardCodearTipos(int tamT){
	int id=1000;
	char descripcion[3][20]={"firstClass","ExecutiveClass","EconomyClass"};
	eTipo** auxtipos=(eTipo**) malloc (sizeof(eTipo*)*tamT);
	if (auxtipos==NULL){
			printf("Hubo un error al crear un espacio en la momoria dinamica.\n");
			exit(1);
		}
	for(int i=0;i<tamT;i++){
		(*auxtipos + i)->id=id;

		strcpy((*auxtipos+i)->descripcion, descripcion[i]);
		id++;

	}

	return auxtipos;
	free(auxtipos);
}
